<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerActivity">


    <Button
        android:id="@+id/btn_addFiveSeconds"
        android:layout_width="78dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="345dp"
        android:backgroundTint="#000000"
        android:fontFamily="@font/alata"
        android:text="+5"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_countdown"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_subtractFiveSeconds"
        android:layout_width="78dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="345dp"
        android:backgroundTint="#000000"
        android:fontFamily="@font/alata"
        android:text="-5"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_countdown" />

    <Button
        android:id="@+id/btn_addInterval"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="243dp"
        android:backgroundTint="#000000"
        android:fontFamily="@font/alata"
        android:text="+1"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tv_intervalsCounter"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_pauseAndResumeCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="260dp"
        android:backgroundTint="#000000"
        android:fontFamily="@font/alata"
        android:text="Pause"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_resetCountdown"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_countdown"
        android:layout_width="159dp"
        android:layout_height="64dp"
        android:layout_marginStart="126dp"
        android:layout_marginEnd="126dp"
        android:fontFamily="@font/alata"
        android:text="COUNTDOWN"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_intervalsCounter"
        android:layout_width="75dp"
        android:layout_height="41dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="243dp"
        android:fontFamily="@font/alata"
        android:text="Intervals"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="118dp"
        android:backgroundTint="#000000"
        android:fontFamily="@font/alata"
        android:text="Back"
        android:textAlignment="center"
        android:textSize="16sp"
        app:icon="@android:drawable/ic_menu_revert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_resetCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="260dp"
        android:backgroundTint="#000000"
        android:fontFamily="@font/alata"
        android:text="Reset"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_countdownTitle"
        android:layout_width="137dp"
        android:layout_height="39dp"
        android:layout_marginStart="137dp"
        android:layout_marginEnd="137dp"
        android:fontFamily="@font/alata"
        android:text="Work Time"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_countdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <View
        android:layout_width="137dp"
        android:layout_height="2dp"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="132dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_countdownTitle" />

    <TextView
        android:id="@+id/tv_totalTime"
        android:layout_width="139dp"
        android:layout_height="49dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="18dp"
        android:fontFamily="@font/alata"
        android:text="Total Time: 00:00"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>